copyright:           Renzo Carbonara 2015
license:             BSD3
license-file:        LICENSE.txt
extra-source-files:  README.md CHANGELOG.md
category:            Data
build-type:          Simple
cabal-version:       >=1.18
synopsis:            Opaleye's sugar on top.
description:         Opaleye's sugar on top.
homepage:            https://github.com/k0001/opaleye-sot
bug-reports:         https://github.com/k0001/opaleye-sot/issues


library
  hs-source-dirs: src/lib
  default-language: Haskell2010
  exposed-modules:
      Opaleye.SOT
      Opaleye.SOT.Internal
      Opaleye.SOT.Internal.Test
  build-depends:
      -- NOTE: The dependencies without specific version ranges are transitional
      aeson
    , base >=4.7 && <4.9
    , bytestring
    , case-insensitive
    , exceptions >=0.8 && <0.9
    , HList >=0.4 && <0.5
    , lens >=4.12 && <4.13
    , mtl >=2.2 && <2.3
    , opaleye >=0.4 && <0.5
    , postgresql-simple 
    , product-profunctors 
    , profunctors 
    , singletons >=1.1 && <1.2
    , text
    , time
    , uuid
  ghcjs-options: -Wall -O3
  ghc-options: -Wall -O2
